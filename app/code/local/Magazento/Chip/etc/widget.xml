        </parameters>
    </saleproducts_magazento>
    <reviews_magazento type="chip/reviews">
        <name>Chip Template/Reviews</name>
        <description type="desc">Adds a list of reviews with advanced parameters</description>
        <parameters>
            <template translate="label">
                <label>Frontend Template</label>
                <visible>0</visible>
                <required>1</required>
                <type>text</type>
                <value>magazento/review_widget.phtml</value>
            </template>    
            <min_rating translate="label">
                <label>Minimal Rating</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <source_model>chip/ratings</source_model>
            </min_rating>                               
            <reviews_amount>
                <label>Amount of Review to Display</label>
                <visible>1</visible>
