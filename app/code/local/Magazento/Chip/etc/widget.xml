<?xml version="1.0" ?>
<widgets>
    <newproducts_magazento type="chip/newproducts">
        <name>Chip Template/New Products</name>
        <description type="desc">Adds a list of new products with advanced parameters</description>
        <parameters>
            <template translate="label">
                <label>Frontend Template</label>
                <visible>0</visible>
                <required>1</required>
                <type>text</type>
                <value>magazento/product_widget_new.phtml</value>
            </template>            
            <static_block>
                <label>Name of static block</label>
                <visible>1</visible>
                <required>0</required>
                <type>text</type>
                <value></value>
            </static_block>
            <products_amount>w
                <label>Amount of Products to Display</label>
                <visible>1</visible>
                <required>1</required>
                <type>text</type>
                <value>10</value>
            </products_amount>
            <cache_lifetime translate="label description">
                <label>Cache Lifetime (Seconds)</label>
                <description>86400 by default, if not set. To refresh instantly, Clear the Blocks HTML Output Cache.</description>
                <visible>1</visible>
                <type>text</type>
            </cache_lifetime>
        </parameters>
    </newproducts_magazento>
    <saleproducts_magazento type="chip/saleproducts">
